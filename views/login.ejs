<%- include('partials/header'); -%>

    <div class="intro">
    <h2>Login</h2>
    </div>

    <form class="login">
        <input class="username" id="usernameField" autocomplete="username" type="text" placeholder="Username"/>
        <input class="password" id="passwordField" autocomplete="current-password" type="password" placeholder="Password"/>
        <button class="login" type="button" onclick="login()">log in</button>
    </form>
    <p id="errorText"></p>

    <p>Forgot your password? <a class="" href="/forgot">Click here</a></p>

    <script src="https://www.gstatic.com/firebasejs/5.9.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/5.9.1/firebase-firestore.js"></script>
    <script src="js/db.js"></script>
    <script src="js/login.js" defer></script>
<%- include('partials/footer'); -%>