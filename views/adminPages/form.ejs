<%- include('../partials/nav'); -%>

    <form class="grunnleggendeData formArea">
        <h3>Grunnleggende data:</h3>

        <div class="duoInputField noBotPadd inputArea">
            <label for="fornavn" class="inputTitle">Fornavn:</label>
            <label for="etternavn" class="inputTitle">Etternavn:</label>

            <input class="userInfoInput" type="text" id="fornavn">
            <input class="userInfoInput" type="text" id="etternavn">
        </div>
        <div class="oneInputField">
            <label for="fodselsdato" class="inputTitle">Fødselsdato:</label>

            <input class="userInfoInput" type="date" id="fodselsdato">
        </div>
        <div class="quadInputFieldScaleable inputArea">
            <div class="inputScalable">
                <label for="status" class="inputTitle">Livsstatus:</label>
                <select autocomplete="off" class="userInfoInput" type="text" id="status">
                    <option disabled selected value>Velg...</option>
                    <option value="0">Levende</option>
                    <option value="1" id="statusDead">Død</option>
                </select>
            </div>
            <div class="inputScalable">
                <label for="endringStatus" class="inputTitle hidden" id="endringStatusLabel">Endring Livsstatus:</label>
                <input class="userInfoInput hidden" type="text" id="endringStatus">
            </div>
            <div class="inputScalable">
                <label for="ekteskap" class="inputTitle">Ekteskap:</label>
                <select autocomplete="off" class="userInfoInput" type="text" id="ekteskap">
                    <option disabled selected value>Velg...</option>
                    <option value="0">Enslig</option>
                    <option value="1">Gift</option>
                    <option value="2">Skilt</option>
                </select>
            </div>
            <div class="inputScalable">
                <label for="ektefelle" class="inputTitle ektefelleLabel hidden">Ektefelle:</label>
                <input class="userInfoInput hidden" type="number" id="ektefelle">
            </div>
        </div>
        <div class="duoInputField inputArea noBotPadd">
            <div class="inputScalableSelection">
                <label for="forelder1" class="inputTitle">Forelder 1:</label>
                <input id="forelder1" class="forelder1Input userInfoInput" type="number">
                <div class="suggestions1Contain">
                    <button class="suggestions1DropBtn">toggle1</button>
                    <div class="suggestions1 hidden"></div>
                </div>
            </div>

            <div class="inputScalableSelection">
                <label for="forelder2" class="inputTitle">Forelder 2:</label>
                <input id="forelder2" class="forelder2Input userInfoInput" type="number">
                <div class="suggestions2Contain">
                    <button class="suggestions2DropBtn">toggle2</button>
                    <div class="suggestions2 hidden"></div>
                </div>
            </div>
        </div>

        <div class="oneInputScalable inputArea noTopPadd">
            <div class="inputScalable">
                <label for="barn" class="inputTitle">Barn:</label>
                <input class="userInfoInput" type="number" id="barn">
            </div>
        </div>
        <!--Finish this last section and adjust sizes of gridboxes-->
        <div class="duoInputField inputArea noBotPadd">
            <label for="postnummer" class="inputTitle">Bosted post-nummer:</label>
            <label for="land" class="inputTitle">Land:</label>

            <input class="userInfoInput" type="number" id="postnummer">
            <input class="userInfoInput" type="text" id="land">
        </div>
        <div class="oneInputField inputArea">
            <label for="botid" class="inputTitle">Botid:</label>
            <input class="userInfoInput" type="number" id="botid"> 
        </div>
    </form>

