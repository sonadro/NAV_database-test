                <label for="fodselsdato" class="inputTitle">Fødselsdato:</label>
                <input class="userInfoInput" type="date" id="fodselsdato">
            </div>
        </div>
        <div class="quadInputFieldScaleable inputArea">
            <div class="inputScalable">
                <label for="status" class="inputTitle">Livsstatus:</label>
                <select autocomplete="off" class="userInfoInput userInfoDropdown" type="text" id="status">
                    <option disabled selected value="default">Velg...</option>
                    <option value="1">Levende</option>
                    <option value="0" id="statusDead">Død</option>
                </select>
            </div>
            <div class="inputScalable">
                <label for="endringStatus" class="inputTitle hidden" id="endringStatusLabel">Endring Livsstatus:</label>
                <input class="userInfoInput hidden" type="date" id="endringStatus">
            </div>
            <div class="inputScalable">
                <label for="ekteskap" class="inputTitle">Ekteskap:</label>
                <select autocomplete="off" class="userInfoInput userInfoDropdown" type="text" id="ekteskap">
                    <option disabled selected value="default">Velg...</option>
                    <option value="0">Enslig</option>
                    <option value="1">Gift</option>
                    <option value="2">Skilt</option>
                </select>
            </div>
            <div class="inputScalable">
                <label for="ektefelle" class="inputTitle ektefelleLabel hidden">Ektefelle:</label>
                <input class="userInfoInput hidden" type="text" id="ektefelle">
            </div>
        </div>
        <div class="duoInputFieldScaleable inputArea noBotPadd">
            <div class="inputScalableSelection">
                <label for="forelder1" class="inputTitle">Forelder 1:</label>
                <input id="forelder1" class="forelder1Input userInfoInput" type="text">
                <div class="suggestions1Contain">
                    <button class="suggestions1DropBtn">toggle1</button>
                    <div class="suggestions1 hidden"></div>
                </div>
            </div>

            <div class="inputScalableSelection">
                <label for="forelder2" class="inputTitle">Forelder 2:</label>
                <input id="forelder2" class="forelder2Input userInfoInput" type="text">
                <div class="suggestions2Contain">
                    <button class="suggestions2DropBtn">toggle2</button>
                    <div class="suggestions2 hidden"></div>
                </div>
            </div>

        </div>

        <div class="oneInputScalable inputArea noTopPadd childArea noBotPadd">
            <div class="inputScalable">
                <label for="barn" class="inputTitle">Barn:</label>
                <input class="userInfoInput" type="text" id="barn">
            </div>
        </div>
        <button class="knapp" type="button" id="addBarn">Legg til barn</button>
        <div class="quadInputFieldScaleable inputArea">
            <div class="inputScalable">
                <label for="land" class="inputTitle">Land:</label>
                <input class="userInfoInput" type="text" id="land">
            </div>
            <div class="inputScalable">
                <label for="postnummer" class="inputTitle">Bosted post-nummer:</label>
                <input class="userInfoInput" type="text" id="postnummer" disabled>
            </div>
            <div class="inputScalable">
                <label for="botid" class="inputTitle">Botid:</label>
                <input class="userInfoInput" type="text" id="botid">
            </div>
        </div>
    </form>

